{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@props/*": ["props/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@styles/components/*": ["styles/components/*"],
      "@styles/helpers/*": ["styles/helpers/*"],
      "@styles/pages*": ["styles/pages/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
